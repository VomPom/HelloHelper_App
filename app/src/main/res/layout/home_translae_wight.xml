<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_material_light"
    android:orientation="vertical" >
    <LinearLayout

        android:background="@color/gray2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="1">
        <ImageView

            android:id="@+id/home_iv_voice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/voice" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/home_ed_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:layout_marginLeft="5dip"
            android:background="#ffffff"
            android:textSize="14dp"
            android:hint="@string/input_translation_words"
            android:textColor="@color/night_biz_pc_gold_chart_green" />

        <Button

            android:id="@+id/home_btn_fanyi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/blue0"
            android:text="@string/transl"
            android:textSize="16dp"
            android:textColor="@color/base_action_bar_title_weather_color" />
    </LinearLayout>

</LinearLayout>