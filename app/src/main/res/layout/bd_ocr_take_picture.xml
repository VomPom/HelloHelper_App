<com.xrone.julis.compous.Application.OCR.camera.OCRCameraLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentView="@+id/camera_view"
        app:leftDownView="@+id/album_button"
        app:centerView="@+id/take_photo_button"
        app:rightUpView="@+id/light_button">

    <com.xrone.julis.compous.Application.OCR.camera.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
            android:id="@+id/close_button"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_width="30dp"
            android:src="@drawable/app_ocr_close"
            android:layout_height="30dp"/>


    <ImageView
            android:id="@+id/album_button"
            android:layout_width="60dp"
            android:layout_height="54dp"
            android:padding="18dp"
            android:layout_marginLeft="@dimen/app_title_size"
            android:layout_marginStart="@dimen/app_title_size"
            android:layout_marginBottom="@dimen/app_title_size"
            android:src="@drawable/app_ocr_gallery"/>


    <ImageView
            android:id="@+id/take_photo_button"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:clickable="true"
            android:background="@drawable/app_ocr_take_photo"/>


    <ImageView
            android:id="@+id/light_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:clickable="true"
            android:layout_marginRight="@dimen/app_title_size"
            android:layout_marginEnd="@dimen/app_title_size"
            android:layout_marginTop="@dimen/app_title_size"
            android:paddingBottom="3dp"
            android:src="@drawable/app_ocr_light_off" />

</com.xrone.julis.compous.Application.OCR.camera.OCRCameraLayout>
