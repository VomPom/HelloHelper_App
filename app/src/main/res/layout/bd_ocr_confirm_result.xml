<com.xrone.julis.compous.Application.OCR.camera.OCRCameraLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentView="@+id/display_image_view"
        app:leftDownView="@+id/cancel_button"
        app:rightUpView="@+id/confirm_button">

    <ImageView
            android:id="@+id/display_image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/afn"/>

    <ImageView
            android:id="@+id/cancel_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:src="@drawable/app_ocr_cancel"
            android:layout_marginLeft="@dimen/app_title_size"
            android:layout_marginStart="@dimen/app_title_size"
            android:layout_marginBottom="@dimen/app_title_size"
    />

    <ImageView
            android:id="@+id/confirm_button"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="12dp"
            android:src="@drawable/app_ocr_confirm"
            android:layout_marginRight="@dimen/app_title_size"
            android:layout_marginEnd="@dimen/app_title_size"
            android:layout_marginTop="@dimen/app_title_size"
    />

</com.xrone.julis.compous.Application.OCR.camera.OCRCameraLayout>
